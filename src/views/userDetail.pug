extends layouts/main

block content
    .user-profile
        .user-profile__header
            if !myphone
                a(href="#")
                    .imgBlank
            else
                a(href=routes.phoneDetail(myphone.id))
                    img(src=myphone.imageUrl)
            h4.profile__username=user.name
            if !myphone
                a(href="#")
                    p|내 휴대폰 없음
            else
                a(href=routes.phoneDetail(myphone.id))
                    p=`${myphone.name} 사용자`
        if user.id === loggedUser.id
            .user-profile__btns
                a(href=`/users${routes.editProfile}`)
                    button ✏️ 프로필 수정
                a(href=`/users${routes.changePassword}`)
                    button 🔒 비밀번호 변경